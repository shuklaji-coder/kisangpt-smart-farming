# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=kisan_gpt
POSTGRES_URL=postgresql://user:password@localhost:5432/kisan_gpt

# API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_EARTH_ENGINE_KEY=your_google_earth_engine_key_here

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Configuration
APP_NAME=Kisan GPT
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ML Model Settings
MODEL_PATH=../models/saved_models/
ENABLE_GPU=False

# Speech Recognition Settings
SPEECH_RECOGNITION_TIMEOUT=10
SUPPORTED_LANGUAGES=hi,mr,en
DEFAULT_LANGUAGE=hi

# TTS Settings
TTS_CACHE_DIR=./cache/tts/
TTS_LANGUAGE_MAPPING={"hi": "hi", "mr": "mr", "en": "en"}

# External APIs
WEATHER_API_TIMEOUT=30
GEOCODING_API_TIMEOUT=20

# File Upload Settings
MAX_AUDIO_FILE_SIZE=10485760  # 10MB
ALLOWED_AUDIO_FORMATS=wav,mp3,ogg,m4a
UPLOAD_DIR=./uploads/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/kisan_gpt.log

# Security
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Community AI Settings
ENABLE_COMMUNITY_SHARING=True
ANONYMIZE_DATA=True
MIN_USERS_FOR_COMMUNITY_MODEL=50