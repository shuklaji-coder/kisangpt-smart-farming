{
  "name": "kisangpt-frontend",
  "buildCommand": "CI=false npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install --legacy-peer-deps && npm install typescript@4.9.5 --legacy-peer-deps",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_API_URL": "https://kisangpt-smart-farming.onrender.com",
    "REACT_APP_OPENWEATHER_API_KEY": "f0ee189e8fc575d580eec8764caee056",
    "REACT_APP_DEBUG": "false",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://kisangpt-smart-farming.onrender.com/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
